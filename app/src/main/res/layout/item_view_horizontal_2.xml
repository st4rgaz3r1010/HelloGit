<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/buku_terbaru_1"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:orientation="horizontal">

        <!--Rectangle 7-->
        <View
            android:id="@+id/rectangle_7"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rectangle_7" />

        <!-- Mask Group -->
        <View
            android:id="@+id/group_cover_buku_d1"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginStart="-210dp"
            android:layout_marginTop="15dp"
            android:background="#00000000" />

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginStart="-110dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <!-- Gambar buku 1 -->
            <ImageView
                android:id="@+id/cover_buku_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/image_4"
                android:contentDescription="Cover book"
                android:scaleType="fitXY"
                android:src="@drawable/the_magic" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/group_info_buku"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Judul Buku -->
            <TextView
                android:id="@+id/judul_buku_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:text="The Magic"
                android:textAppearance="@style/the_magic" />

            <TextView
                android:id="@+id/penulis_buku_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Ini adalah buku #1"
                android:textAppearance="@style/deskripsi_buku_d1" />

            <RatingBar
                android:id="@+id/rating_buku_d1"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:numStars="5"
                android:rating="3.5"
                android:stepSize="0.5" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>