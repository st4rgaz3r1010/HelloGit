<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bg_layout">

    <LinearLayout
        android:id="@+id/group_daftar_buku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/daftar_buku_1"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="#00000000"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Card item-->
            <View
                android:id="@+id/rectangle_daftar_1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginStart="-325dp"
                android:layout_marginTop="15dp"
                android:elevation="30dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <!-- Gambar buku -->
                <ImageView
                    android:id="@+id/cover_buku_d1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_4"
                    android:contentDescription="Cover book"
                    android:scaleType="fitXY"
                    android:src="@drawable/the_magic" />

            </androidx.cardview.widget.CardView>

            <!-- Judul Buku D1 -->
            <TextView
                android:id="@+id/judul_buku_d1"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:gravity="top"
                android:text="Buku #1"
                android:textAppearance="@style/the_magic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Penulis buku D1 -->
            <TextView
                android:id="@+id/penulis_buku_d1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-219dp"
                android:layout_marginTop="45dp"
                android:gravity="top"
                android:text="Ini adalah buku #1"
                android:textAppearance="@style/selesai"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            <RatingBar-->
            <!--                android:id="@+id/ratingbar_book_d1"-->
            <!--                style="?android:attr/ratingBarStyleSmall"-->
            <!--                android:layout_width="75dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="-120dp"-->
            <!--                android:layout_marginTop="75dp"-->
            <!--                app:layout_constraintStart_toEndOf="@+id/cover_buku_d1"-->
            <!--                app:layout_constraintTop_toBottomOf="@+id/penulis_buku_d1" />-->

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>