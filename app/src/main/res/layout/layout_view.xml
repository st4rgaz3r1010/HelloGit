<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="15dp"
    android:background="?attr/bg"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/group_cover_buku_d1"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/cover_buku_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="Cover book"
                android:scaleType="fitXY"
                android:src="@drawable/the_magic" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/group_info_buku"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/group_cover_buku_d1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/judul_buku_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="2dp"
                android:text="The Magic"
                android:textAppearance="@style/the_magic" />

            <TextView
                android:id="@+id/penulis_buku_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Ini adalah buku #1"
                android:textAppearance="@style/deskripsi_buku_d1" />

            <RatingBar
                android:id="@+id/rating_buku_d1"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:numStars="5"
                android:rating="3.5"
                android:stepSize="0.5" />

        </LinearLayout>

        <TextView
            android:id="@+id/informasi_harga_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:text="Gratis"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/informasi_harga_db" />

        <TextView
            android:id="@+id/jumlah_hal_buku_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="350 Halaman"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/hal_buku_db" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>