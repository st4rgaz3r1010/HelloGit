<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="?attr/bg"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/group_cover_buku_d1"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/book_item_smallThumbnail"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:contentDescription="Cover book"
                android:scaleType="fitXY"
                android:src="@drawable/the_magic"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/book_item_rightLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/group_cover_buku_d1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/book_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppinssb"
                android:text="The Magic"
                android:textAppearance="@style/the_magic"/>

            <TextView
                android:id="@+id/book_item_authors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Ini adalah buku #1"
                android:textAppearance="@style/deskripsi_buku_d1" />

            <TextView
                android:id="@+id/book_item_publishedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Tanggal Publish"
                android:textAppearance="@style/deskripsi_buku_d1" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>