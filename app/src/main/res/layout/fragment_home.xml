<?xml version="1.0" encoding="utf-8"?><!--Coding by Muhammad Rifqi Nugraha - Kelompok Coding-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_layout"
    android:forceDarkAllowed="false"
    tools:context=".ui.home.HomeFragment"
    tools:targetApi="Q">

    <!--Nested Scroll-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Background untuk Header-->
            <View
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="-34dp"
                android:background="@drawable/bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/profil_menu"
                android:layout_width="309dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="13dp"
                android:background="#00000000"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Gambar profil -->
                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="50dp"
                    android:layout_height="68dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/ellipse_2"
                    android:contentDescription="Gambar Profil"
                    android:scaleType="fitXY"
                    android:src="@drawable/foto_profil"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/desc_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="25dp"
                    android:gravity="top"
                    android:lineHeight="21sp"
                    android:text="Selamat Membaca"
                    android:textAppearance="@style/desc_profil"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nama_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="4dp"
                    android:gravity="top"
                    android:text="Halo Coding,"
                    android:textAppearance="@style/nama_profil"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </RelativeLayout>

            <View
                android:id="@+id/search_edit_view"
                android:layout_width="285dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="86dp"
                android:background="@drawable/rectangle_2"
                android:textAppearance="@style/search_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_edit"
                android:layout_width="285dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="86dp"
                android:background="@drawable/rectangle_2"
                android:hint="Temukan Buku Favorit Anda"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingEnd="35dp"
                android:textAppearance="@style/search_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="305dp"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rectangle_3"
                android:src="@drawable/search_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/search_edit"
                tools:listitem="@layout/result_items" />

            <!--Bagian Buku Terbaru-->
            <TextView
                android:id="@+id/bagian_terbaru"
                android:layout_width="109dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:text="Buku Terbaru"
                android:textAppearance="@style/bagian_terbaru"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerview_search" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/bagian_terbaru"
                tools:listitem="@layout/item_view_horizontal" />

            <!-- Bagian Buku Trending -->
            <TextView
                android:id="@+id/bagian_trending"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:gravity="top"
                android:text="Sedang Trending"
                android:textAppearance="@style/sedang_tren"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerview_horizontal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_horizontal_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bagian_trending"
                tools:listitem="@layout/item_view_horizontal_two" />

            <RelativeLayout
                android:id="@+id/group_daftar_buku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintTop_toBottomOf="@id/recyclerview_horizontal_two">

                <TextView
                    android:id="@+id/daftar_buku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Daftar Buku"
                    android:textAppearance="@style/daftar_buku" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/group_daftar_buku" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>